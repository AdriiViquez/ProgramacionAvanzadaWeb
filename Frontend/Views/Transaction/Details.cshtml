@model Frontend.Models.TransactionViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center fw-bold">Detalles de Transacciones</h1>

<div class="p-4 mt-4" style="background-color: white; border-radius: 10px; max-width: 800px; margin: 0 auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <dl class="row">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginAccountId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginAccountId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationAccountId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinationAccountId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransactionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div class="text-center mt-4">
    <a href="@Url.Action("Edit", new { id = Model.TransactionId })" class="btn btn-success">Editar</a>
    <a href="@Url.Action("Index", "AccessReport")" class="btn btn-info">Volver a la lista de Reportes</a>
</div>
