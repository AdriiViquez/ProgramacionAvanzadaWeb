@model Frontend.ApiModel.AccessReport

@{
    ViewData["Title"] = "Detalles de Reporte de Acceso";
}

<h1 class="text-center fw-bold">Detalles de Reporte de Acceso</h1>

<div class="p-4 mt-4" style="background-color: white; border-radius: 10px; max-width: 800px; margin: 0 auto; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <dl class="row">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessReportId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessReportId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IPAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IPAddress)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Success)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Success)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessDescription)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Edit", new { id = Model.AccessReportId })" class="btn btn-success">Editar</a>
    <a href="@Url.Action("Index", "AccessReport")" class="btn btn-info">Volver a la lista de Reportes</a>
</div>
